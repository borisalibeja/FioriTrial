<mvc:View controllerName="trial4.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m" >

    <m:Page id="page" title="{i18n>title}">
        	<m:content>
			<Table id="_IDGenTable1"
				rows="{Products>/ProductCollection}"
				selectionMode="MultiToggle"
				paste="onPaste"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar id="_IDGenOverflowToolbar" style="Clear">
						<m:Title id="title" text="Products"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column id="_IDGenColumn" width="11rem">
						<m:Label id="_IDGenLabel" text="Product Name" />
						<template>
							<m:Text id="_IDGenText" text="{Products>Name}" wrapping="false" />
						</template>
					</Column>
					<Column id="_IDGenColumn1" width="11rem">
						<m:Label id="_IDGenLabel1" text="Product Id" />
						<template>
							<m:Input id="_IDGenInput" value="{Products>ProductID}"/>
						</template>
					</Column>
					<Column id="_IDGenColumn2" width="6rem" hAlign="Begin">
						<m:Label id="_IDGenLabel2" text="Quantity" />
						<template>
							<m:Label id="_IDGenLabel3" text="{Products>Quantity}" />
						</template>
					</Column>
					<Column id="_IDGenColumn3" width="9rem">
						<m:Label id="_IDGenLabel4" text="Status" />
						<template>
							<m:ObjectStatus id="_IDGenObjectStatus" text="{Products>Status}" state="{
								path: 'Available',
								formatter: '.formatAvailableToObjectState'
							}"/>
						</template>
					</Column>
					<Column id="_IDGenColumn4" width="9rem">
						<m:Label id="_IDGenLabel5" text="Price" />
						<template>
							<u:Currency id="_IDGenCurrency" value="{Products>Price}" currency="{Products>CurrencyCode}"/>
						</template>
					</Column>
					<Column id="_IDGenColumn5" width="12rem">
						<m:Label id="_IDGenLabel6" text="Supplier" />
						<template>
							<m:ComboBox id="_IDGenComboBox" value="{SupplierName}" items="{Products>/Suppliers}">
								<c:Item id="_IDGenItem" text="{Products>Name}" />
							</m:ComboBox>
						</template>
					</Column>
					<Column id="_IDGenColumn6" width="9rem">
						<m:Label id="_IDGenLabel7" text="Image" />
						<template>
							<m:Link id="_IDGenLink" text="Show Image" href="{Products>ProductPicUrl}" target="_blank"/>
						</template>
					</Column>
					<Column id="_IDGenColumn7" width="9rem">
						<m:Label id="_IDGenLabel8" text="Details" />
						<template>
							<m:Button id="_IDGenButton" text="Show Details" press="handleDetailsPress"/>
						</template>
					</Column>
					<Column id="_IDGenColumn8" width="7rem">
						<m:Label id="_IDGenLabel9" text="Heavy Weight" />
						<template>
							<m:CheckBox id="_IDGenCheckBox" selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}"/>
						</template>
					</Column>
					<Column id="_IDGenColumn9" width="12rem">
						<m:Label id="_IDGenLabel10" text="Main Category" />
						<template>
							<m:Select id="_IDGenSelect" selectedKey="{Category}" items="{Products>/Categories}">
								<c:Item id="_IDGenItem1" text="{Products>Name}" key="{Name}"/>
							</m:Select>
						</template>
					</Column>
					
					<Column id="_IDGenColumn11" width="6rem" hAlign="Center">
						<m:Label id="_IDGenLabel12" text="Status" />
						<template>
							<c:Icon id="_IDGenIcon" src="{
								path: 'Available',
								formatter: '.formatAvailableToIcon'
							}"/>
						</template>
					</Column>
					<Column id="_IDGenColumn12" width="11rem" hAlign="Center">
						<m:Label id="_IDGenLabel13" text="Delivery Date" />
						<template>
							<m:DatePicker id="_IDGenDatePicker" value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
    </m:Page>

</mvc:View>