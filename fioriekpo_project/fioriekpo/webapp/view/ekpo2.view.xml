<mvc:View controllerName="fioriekpo.controller.ekpo2"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m" >


    <m:Page id="ekpo2" title="{i18n>title}">

        <m:content>

			<!-- language selection Button -->
			<m:Button id="_IDGenButton7" text="English" press="onLanguageSelect">
				<m:customData>
					<core:CustomData id="engbutton" key="langCode" value="en" />
				</m:customData>
			</m:Button>

			<m:Button id="_IDGenButton8" text="Italian" press="onLanguageSelect">
				<m:customData>
					<core:CustomData id="itbutton" key="langCode" value="it" />
				</m:customData>
			</m:Button>

			<m:Button id="_IDGenButton11" text="Albanian" press="onLanguageSelect">
				<m:customData>
					<core:CustomData id="albutton" key="langCode" value="al" />
				</m:customData>
			</m:Button>

             <!-- Toolbar with Plant Search -->
            <m:Toolbar id="_IDGenToolbar1">
                <m:Label id="_IDGenLabel14" text="{i18n>plant}" />
                <m:SearchField 
                    id="_IDGenSearchField" 
                    placeholder="{i18n>fabricSearch}" 
                    width="200px"
                    liveChange="onSearch" />
            </m:Toolbar>

			


			<!-- Table -->
			<Table id="_IDGenTable2"
				rows="{listModel>/results}"
				selectionMode="MultiToggle"
				ariaLabelledBy="title2">
				<extension>
					<m:OverflowToolbar id="_IDGenOverflowToolbar1" style="Clear">
						<m:Title id="_IDGenTitle" text="{i18n>tableName}"/>
					</m:OverflowToolbar>
				</extension>
				<columns>

					<!-- <Column id="_IDGenColumn1" width="11rem">
						<m:Label id="_IDGenLabel1" text="{i18n>client}" />
						<template>
							<m:Text id="_IDGenText1" text="{listModel>Mandt}" wrapping="false" />
						</template>
					</Column> -->

					<Column id="_IDGenColumn0" width="11rem">
						<m:Label id="_IDGenLabel1" text="{i18n>purchaseOrder}" />
						<template>
							<m:Text id="_IDGenText" text="{listModel>Ebeln}" wrapping="false" />
						</template>
					</Column>

					<Column id="_IDGenColumn1" width="11rem">
						<m:Label id="_IDGenLabel10" text="{i18n>item}" />
						<template>
							<m:Text id="_IDGenText1" text="{listModel>Ebelp}" wrapping="false" />
						</template>
					</Column>

					<Column id="_IDGenColumn13" width="11rem">
						<m:Label id="_IDGenLabel13" text="{i18n>material}" />
						<template>
							<m:Text id="_IDGenText12" text="{listModel>Matnr}" wrapping="false" />
						</template>
					</Column>

					<Column id="_IDGenColumn10" width="11rem">
						<m:Label id="_IDGenLabel11" text="{i18n>companyCode}" />
						<template>
							<m:Text id="_IDGenText10" text="{listModel>Bukrs}" wrapping="false" />
						</template>
					</Column>

					<Column id="_IDGenColumn11" width="11rem">
						<m:Label id="_IDGenLabel12" text="{i18n>plant}" />
						<template>
							<m:Text id="_IDGenText11" text="{listModel>Werks}" wrapping="false" />
						</template>
					</Column>

					

				</columns>
			</Table>
			
				<!-- switching view button -->
			<m:Button id="_IDGenButton2" text="Go to the first view"
				press="onPress"
				>
				<m:layoutData>
					<m:FlexItemData id="_IDGenFlexItemData1" growFactor="1" />
				</m:layoutData>
			</m:Button>
		</m:content>

		


    </m:Page>

</mvc:View>
